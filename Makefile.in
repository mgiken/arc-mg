prog = arc

prefix      = @prefix@
exec_prefix = @exec_prefix@

srcdir = @srcdir@
bindir = @bindir@
libdir = @libdir@

arcsrc = $(srcdir)/bin/$(prog).sh
arcbin = $(srcdir)/bin/$(prog)
arclib = $(srcdir)/lib

all: $(prog)

$(prog): $(arcbin)

$(arcbin): $(arcsrc)
	sed -e 's#.(cd.*/#$(libdir)/arc/#' <$(arcsrc) >$(arcbin)
	chmod 755 $(arcbin)

clean:
	rm -rf *~ $(arcbin)

install: $(prog)
	mkdir -p $(bindir) $(libdir)
	cp $(arcbin) $(bindir)/$(prog)
	cp -r $(arclib) $(libdir)/$(prog)

uninstall:
	rm -rf $(bindir)/$(prog)
	rm -rf $(libdir)/$(prog)
